<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="authenticate.LoginFragment">


    <EditText
        android:id="@+id/email_credentials"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/edit_enter_email"
        android:ems="10"
        android:hint="@string/edit_enter_email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password_credentials"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/edit_enter_password"
        android:ems="10"
        android:hint="@string/edit_enter_password"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/btn_signin" />


</LinearLayout>